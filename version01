  <!-- SCRIPTS -->
  <script>
    // Typewriter effect for chess piece witty lines
    const wittyLine = document.getElementById('witty-line');
    function typewriterEffect(text, speed=40) {
      wittyLine.textContent = "";
      let index = 0;
      let interval = setInterval(() => {
        if (index < text.length) {
          wittyLine.textContent += text.charAt(index);
          index++;
        } else {
          clearInterval(interval);
        }
      }, speed);
      return interval;
    }
    let typingInterval = null;
    const pieces = document.querySelectorAll('.chess-piece-img');
    pieces.forEach(piece => {
      piece.addEventListener('mouseenter', () => {
        if (typingInterval) clearInterval(typingInterval);
        typewriterEffect(piece.getAttribute('data-witty'));
      });
      piece.addEventListener('mouseleave', () => {
        if (typingInterval) clearInterval(typingInterval);
        wittyLine.textContent = 'Hover over a piece to see its witty description.';
      });
    });

    // Knight selection message UI
    const blackKnight = document.querySelector('.knight-img');
    const whiteKnight = document.querySelector('.second-img');
    const hoverMsg = document.getElementById('hover-message');
    blackKnight.addEventListener('mouseenter', () => {
      hoverMsg.textContent = 'Start game as Black';
      hoverMsg.style.display = 'block';
    });
    blackKnight.addEventListener('mouseleave', () => {
      hoverMsg.style.display = 'none';
    });
    whiteKnight.addEventListener('mouseenter', () => {
      hoverMsg.textContent = 'Start game as White';
      hoverMsg.style.display = 'block';
    });
    whiteKnight.addEventListener('mouseleave', () => {
      hoverMsg.style.display = 'none';
    });
  </script>
